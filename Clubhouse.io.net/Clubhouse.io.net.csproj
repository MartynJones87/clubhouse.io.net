<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Description>A .Net client library for the Clubhouse API https://clubhouse.io/api</Description>
		<Authors>Martyn Jones</Authors>
		<Company>Martyn Jones</Company>
		<Copyright>Copyright 2017</Copyright>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/MartynJones87/clubhouse.io.net</PackageProjectUrl>
		<PackageTags>Clubhouse REST API</PackageTags>
		<PackageReleaseNotes>Adding Stories Search functionality.</PackageReleaseNotes>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	</PropertyGroup>

	<PropertyGroup>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeSourceFilesProjectOutputGroup>true</IncludeSourceFilesProjectOutputGroup>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Refit" Version="5.1.67" />
		<PackageReference Include="System.ComponentModel.Annotations" Version="4.7.0" />
	</ItemGroup>

</Project>
